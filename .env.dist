# Configuración de Rutas (Relativas al directorio del proyecto)
STORAGE_PATH=./storage

# Configuración ROCm para RX 6750 XT
# gfx1031 (Navi 22) mapeado a 10.3.0 para máxima compatibilidad con PyTorch
ROCM_VERSION=6.2
HSA_OVERRIDE_GFX_VERSION=10.3.0
HIP_VISIBLE_DEVICES=0

# Configuración de Puertos
OLLAMA_PORT=11000
MUSICGEN_PORT=11001
IMAGEGEN_PORT=11002
VIDEGEN_PORT=11003

GATEWAY_PORT=8080

# Límites de Recursos
MAX_VRAM_USAGE=10000 # MB para gestión de Ollama
PYTORCH_HIP_ALLOC_CONF=max_split_size_mb:256

# Seguridad - Cambiar por una clave aleatoria
API_KEY=this_is_a_test_key
